if [ "$1" = install ] || [ "$1" = upgrade ]; then
	if [ -e "#OLD#" ]; then
		if [ "`md5sum \"#OLD#\" | sed -e \"s/ .*//\"`" = \
		     "`sed -n -e \"/^Conffiles:/,/^[^ ]/{\\\\' #OLD#'{s/.* //;p}}\" /var/lib/dpkg/status`" ]
		then
			rm -f "#OLD#"
		fi
	fi
	if [ -L "#RULE#" ]; then
		rm -f "#RULE#"
	fi
fi
